<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.apptesting.test.viewmodel.ViewWallpapersModel" />
    </data>

    <RelativeLayout
        android:id="@+id/root_lout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".activity.ViewWallpapersActivity">

        <ImageView
            android:id="@+id/img_bg"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/sample_image_1" />

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="@color/color_blur_25">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginBottom="20dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="42dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="10dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/btn_back"
                        android:layout_width="35dp"
                        android:layout_height="35dp"

                        android:src="@drawable/ic_chevron"
                        app:tint="@color/color_text_primary" />


                </LinearLayout>


                <com.github.islamkhsh.CardSliderViewPager
                    android:id="@+id/viewPager"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    app:auto_slide_time="5"
                    app:cardSlider_otherPagesWidth="25dp"
                    app:cardSlider_pageMargin="8dp"
                    app:cardSlider_smallScaleFactor="0.8">

                </com.github.islamkhsh.CardSliderViewPager>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="30dp"
                    android:layout_marginTop="20dp">

                    <TextView
                        android:id="@+id/btn_download"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_purple_gradient_500"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="@string/download"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_14" />

                    <TextView
                        android:id="@+id/btn_preview"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:background="@drawable/bg_purple_gradient_500"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/poppins_medium"
                        android:gravity="center"
                        android:paddingVertical="10dp"
                        android:text="@string/preview"
                        android:textColor="@color/black"
                        android:textSize="@dimen/ts_14" />


                </RelativeLayout>


            </LinearLayout>

        </eightbitlab.com.blurview.BlurView>

        <LinearLayout
            android:id="@+id/lout_loader_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone">

            <include layout="@layout/layout_loader" />

        </LinearLayout>

    </RelativeLayout>
</layout>