<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.apptesting.test.viewmodel.MainViewModel" />
    </data>

    <RelativeLayout
        android:id="@+id/root_lout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/transparent"
        android:orientation="horizontal">

        <eightbitlab.com.blurview.BlurView
            android:id="@+id/blurView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:blurOverlayColor="@color/color_blur_25">


        </eightbitlab.com.blurview.BlurView>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="match_parent"
            android:background="@drawable/bg_nav"
            android:backgroundTint="@color/color_theme_blue"
            android:orientation="vertical">


            <ImageView
                android:layout_width="50dp"
                android:layout_height="40dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="70dp"
                android:layout_marginBottom="40dp"

                android:src="@drawable/logo">


            </ImageView>

            <LinearLayout
                android:id="@+id/lout_purchase"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:visibility="gone">

                <View
                    android:layout_width="match_parent"
                    android:layout_height=".5dp"

                    android:alpha=".7"
                    android:background="@color/color_popup_bg" />

                <LinearLayout
                    android:id="@+id/btn_premium"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="20dp"
                    android:background="@drawable/bg_purple_gradient_500"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="22dp"
                        android:layout_height="22dp"
                        android:layout_marginStart="20dp"
                        android:src="@drawable/ic_premium"
                        app:tint="@color/color_text_primary" />


                    <TextView

                        style="@style/TextViewLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="@string/premium"
                        android:textColor="@color/color_text_primary"
                        android:textSize="@dimen/ts_15" />

                </LinearLayout>


            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height=".5dp"

                android:alpha=".7"
                android:background="@color/color_popup_bg" />

            <androidx.core.widget.NestedScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingTop="10dp"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/btn_noti"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_round_corner_500"
                            android:backgroundTint="@color/color_theme_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_bell"
                                app:tint="@color/color_text_primary" />


                            <TextView

                                style="@style/TextViewLocal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"

                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/notification"
                                android:textColor="@color/color_text_primary"
                                android:textSize="@dimen/ts_15" />

                            <View
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_weight="1" />

                            <androidx.appcompat.widget.SwitchCompat
                                android:id="@+id/switch_noti"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                app:thumbTint="@color/white"
                                app:track="@drawable/custom_track" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_rate"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_round_corner_500"
                            android:backgroundTint="@color/color_theme_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_thumb"
                                app:tint="@color/color_text_primary" />


                            <TextView

                                style="@style/TextViewLocal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"

                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/rate_us"
                                android:textColor="@color/color_text_primary"
                                android:textSize="@dimen/ts_15" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_privacy"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_round_corner_500"
                            android:backgroundTint="@color/color_theme_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_privacy"
                                app:tint="@color/color_text_primary" />


                            <TextView

                                style="@style/TextViewLocal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"

                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/privacy_policy"
                                android:textColor="@color/color_text_primary"
                                android:textSize="@dimen/ts_15" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_terms"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_round_corner_500"
                            android:backgroundTint="@color/color_theme_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_tems"
                                app:tint="@color/color_text_primary" />


                            <TextView

                                style="@style/TextViewLocal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"

                                android:fontFamily="@font/poppins_medium"
                                android:text="@string/terms_amp_condition"
                                android:textColor="@color/color_text_primary"
                                android:textSize="@dimen/ts_15" />

                        </LinearLayout>

                        <LinearLayout
                            android:id="@+id/btn_restore"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginVertical="10dp"
                            android:background="@drawable/bg_round_corner_500"
                            android:backgroundTint="@color/color_theme_blue"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="10dp"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:src="@drawable/ic_restore"
                                app:tint="@color/color_text_primary" />


                            <TextView

                                style="@style/TextViewLocal"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="15dp"
                                android:layout_weight="1"
                                android:fontFamily="@font/poppins_medium"
                                android:gravity="start"
                                android:text="@string/restore_purchases"
                                android:textColor="@color/color_text_primary"
                                android:textSize="@dimen/ts_15" />

                            <ProgressBar
                                android:id="@+id/lout_loader"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:layout_marginStart="10dp"
                                android:indeterminateTint="@color/color_theme_purple_light"
                                android:visibility="gone"
                                tools:visibility="visible" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

            </androidx.core.widget.NestedScrollView>

        </LinearLayout>
    </RelativeLayout>
</layout>