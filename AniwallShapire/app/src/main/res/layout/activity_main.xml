<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="model"
            type="com.apptesting.test.viewmodel.MainViewModel" />
    </data>

    <androidx.drawerlayout.widget.DrawerLayout

        android:id="@+id/drawer_lout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="-64dp"

        >

        <LinearLayout
            android:id="@+id/root_lout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="64dp"
            android:background="@color/color_theme_blue"
            android:orientation="vertical">

            <RelativeLayout

                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1">


                <androidx.viewpager2.widget.ViewPager2
                    android:id="@+id/v_pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="32dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:onClick="@{() ->model.onTabClick(3)}"
                        android:padding="5dp"
                        android:src="@drawable/ic_menu"
                        app:tint="@color/color_text_primary" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />

                    <ImageView
                        android:id="@+id/logo_img"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="5dp"
                        android:src="@drawable/logo" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1" />


                    <ImageView
                        android:id="@+id/btn_search"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:paddingVertical="5dp"
                        android:paddingStart="10dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/color_text_primary" />


                </LinearLayout>


                <androidx.cardview.widget.CardView
                    android:id="@+id/root"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginBottom="20dp"
                    android:outlineSpotShadowColor="@color/transparent"
                    app:cardBackgroundColor="@color/transparent"
                    app:cardCornerRadius="500dp"
                    tools:targetApi="p">

                    <eightbitlab.com.blurview.BlurView
                        android:id="@+id/blurView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="16dp"
                        app:blurOverlayColor="@color/color_blur_25">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="60dp"
                            android:layout_margin="5dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <RelativeLayout
                                android:id="@+id/parent_home"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:gravity="center"

                                android:onClick="@{() ->model.onTabClick(0)}"
                                android:orientation="vertical">


                                <View
                                    android:id="@+id/lout_home"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_round_corner_500"
                                    android:backgroundTint="@color/color_theme_blue" />

                                <ImageView
                                    android:id="@+id/img_1"
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_image" />

                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/parent_cat"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_round_corner_500"
                                android:gravity="center"

                                android:onClick="@{() ->model.onTabClick(1)}"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/lout_cat"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"

                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_round_corner_500" />


                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_category" />


                            </RelativeLayout>

                            <RelativeLayout
                                android:id="@+id/parent_fav"

                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@drawable/bg_round_corner_500"
                                android:gravity="center"

                                android:onClick="@{() ->model.onTabClick(2)}"
                                android:orientation="vertical">

                                <View
                                    android:id="@+id/lout_fav"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_centerInParent="true"
                                    android:background="@drawable/bg_round_corner_500" />

                                <ImageView
                                    android:layout_width="25dp"
                                    android:layout_height="25dp"
                                    android:layout_centerInParent="true"
                                    android:src="@drawable/ic_fav" />

                            </RelativeLayout>

                        </LinearLayout>
                    </eightbitlab.com.blurview.BlurView>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/lout_loader"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/black_2"
                    android:gravity="center"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <include layout="@layout/layout_loader" />

                </LinearLayout>
            </RelativeLayout>


        </LinearLayout>


        <com.google.android.material.navigation.NavigationView
            android:id="@+id/nav"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/transparent"
            android:layout_gravity="start">

            <include
                android:id="@+id/nav_bar"
                layout="@layout/lout_nav_bar"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

        </com.google.android.material.navigation.NavigationView>
    </androidx.drawerlayout.widget.DrawerLayout>
</layout>