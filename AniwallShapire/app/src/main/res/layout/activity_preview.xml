<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <RelativeLayout
        android:id="@+id/root_lout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_theme_blue"
        tools:context=".activity.PreviewActivity">


        <ImageView
            android:id="@+id/img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

        <androidx.media3.ui.PlayerView
            android:id="@+id/exo_player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            app:hide_on_touch="true"
            app:resize_mode="zoom"
            app:shutter_background_color="@color/color_theme_blue"
            app:use_controller="false" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="30dp">


            <androidx.cardview.widget.CardView
                android:id="@+id/btn_download"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="500dp"
                tools:targetApi="p">


                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:blurOverlayColor="@color/color_blur_25">

                    <TextView
                        style="@style/TextViewLocal"
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:layout_alignParentEnd="true"
                        android:paddingHorizontal="40dp"
                        android:text="@string/download"
                        android:textSize="@dimen/ts_16"
                        tools:visibility="visible" />
                </eightbitlab.com.blurview.BlurView>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_marginEnd="15dp"
                android:outlineSpotShadowColor="@color/transparent"
                app:cardBackgroundColor="@color/transparent"
                app:cardCornerRadius="500dp"
                tools:targetApi="p">


                <eightbitlab.com.blurview.BlurView
                    android:id="@+id/blurView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:blurOverlayColor="@color/color_blur_25">

                    <ImageView
                        style="@style/TextViewLocal"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:padding="19dp"
                        android:src="@drawable/ic_close" />
                </eightbitlab.com.blurview.BlurView>

            </androidx.cardview.widget.CardView>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lout_loader"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_theme_blue"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone">

            <include layout="@layout/layout_loader" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/lout_loader_download"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/black_2"
            android:gravity="center"
            android:visibility="gone"
            tools:visibility="gone">

            <include layout="@layout/layout_loader" />

        </LinearLayout>


    </RelativeLayout>
</layout>