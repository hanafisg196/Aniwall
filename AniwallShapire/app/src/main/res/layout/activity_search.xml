<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="model"
            type="com.apptesting.test.viewmodel.SearchViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/color_theme_blue"
        android:orientation="vertical"
        tools:context=".activity.SearchActivity">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="42dp"
            android:layout_marginEnd="20dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="35dp"
                android:layout_height="35dp"

                android:src="@drawable/ic_chevron"
                app:tint="@color/color_text_primary" />


            <EditText

                android:id="@+id/et_search"
                style="@style/TextViewLocal"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="10dp"
                android:layout_weight="1"
                android:background="@drawable/bg_round_corner_500"
                android:backgroundTint="@color/white_30"
                android:gravity="start"
                android:hint="@string/search_here"
                android:paddingHorizontal="20dp"
                android:paddingVertical="8dp"
                android:src="@drawable/logo"
                android:textColor="@color/color_text_primary"
                android:textColorHint="@color/color_text_hint"
                android:textSize="@dimen/ts_16"
                tools:text="dvhduhv" />


            <ImageView
                android:id="@+id/btn_filter"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:padding="5dp"
                android:src="@drawable/ic_filter"
                app:tint="@color/color_text_primary" />


        </LinearLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingTop="15dp">

            <androidx.core.widget.NestedScrollView
                android:id="@+id/nested_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none"
                app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior">


                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_image_by_category"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:adapter="@{model.homeImagesByCatAdapter}"
                    app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                    app:spanCount="2"
                    tools:itemCount="4"
                    tools:listitem="@layout/item_home_image_by_cat"
                    tools:visibility="gone" />


            </androidx.core.widget.NestedScrollView>

            <LinearLayout
                android:id="@+id/tv_no_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:gravity="center"
                android:orientation="vertical"
                android:visibility="@{model.noData?View.VISIBLE:View.GONE}"
                tools:visibility="visible">

                <TextView

                    style="@style/TextViewLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text="@string/no_data_for"
                    android:textColor="@color/white_30"
                    android:textSize="@dimen/ts_20" />

                <TextView

                    android:id="@+id/tv_search_word"
                    style="@style/TextViewLocal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/poppins_semibold"
                    android:text='@{"\""+model.searchWord+"\""}'
                    android:textColor="@color/white_30"
                    android:textSize="@dimen/ts_18"
                    tools:text="more" />

            </LinearLayout>


        </RelativeLayout>

        <com.apptesting.test.utils.ads.MyBannerAdsView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="15dp"
            android:background="@color/transparent" />


    </LinearLayout>
</layout>